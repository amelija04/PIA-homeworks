           <script>
               
               $(document).ready(function(){
                $(".napraviNalog").hide();
                $(".prijava").hide(); 
           
                $("#nalog").click(function() {
                   $(".napraviNalog").show();
                   $(".centralni").hide(); 
                   $(".prijava").hide(); 
                });
               });

               $("#prijaviteSe").click(function() {
                   $(".napraviNalog").hide();
                   $(".centralni").hide(); 
                   $(".prijava").show(); 
