           <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
           <script>
               
               $(document).ready(function(){
                $(".napraviNalog").hide();
                $(".trazifilm").hide(); 
           
                $("#nalog").click(function() {
                   $(".napraviNalog").show();
                   $(".početno").hide(); 
                   $(".trazifilm").hide(); 
                });
               });

              $("#login").click(function() {
                  var name2 = $("#korIme").val().toString();
                  var pass2 = $("#pass2").val().toString();
                   if (name2 != "" && pass2 !=""){
                   $(".napraviNalog").hide();
                   $(".početno").hide(); 
                   $(".trazifilm").fadeIn(); 
                   }
                   
                });

                $("#registracija").click(function() {
                  var name1 = $("#name1").val().toString();
                  var surname = $("#surname").val().toString();
                  var email = $("#email").val().toString();
                  var name11 = $("#name11").val().toString();
                  var pass1 = $("#pass1").val().toString();
                  if (name1 != "" && surname != "" && email != "" && name11 != "" && pass1 !=""){
                    $(".napraviNalog").hide();
                    $(".početno").hide(); 
                    $(".trazifilm").fadeIn();
                  }
                   
                });
           
           </script>
   
         
        
        

